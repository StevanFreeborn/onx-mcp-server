{
  "name": "onx-mcp-server",
  "version": "1.0.0",
  "description": "A server for the Model Context Protocol (MCP) that integrates with Onspring's API.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "onx-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "start": "node build/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui --api 9527",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node --env-file ./.env ./build/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts, --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "keywords": [
    "modelcontextprotocol",
    "onspring",
    "server"
  ],
  "author": "Stevan Freeborn",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "onspring-api-sdk": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.14.1",
    "@vitest/coverage-istanbul": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.1"
  }
}
